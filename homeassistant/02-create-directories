---
- name: make extra foldars
  hosts: your_debian_servers
  become: yes  # Run tasks with sudo

  vars:
    target_folders:
      - /opt/docker/influxdb/config
      - /opt/docker/influxdb/db

  tasks:
    - name: Create folders
      file:
        path: "{{ item }}"
        state: directory
        mode: '0755'
      with_items: "{{ target_folders }}"
